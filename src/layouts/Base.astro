---
// Base layout for pages. Provides header navigation and footer with socials.
const socials = [
  { label: 'X', href: 'https://x.com/chudinnorukam' },
  { label: 'Pinterest', href: 'https://pinterest.com/chudinnorukam' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/in/chudi-nnorukam-b91203143/' },
  { label: 'Medium', href: 'https://medium.com/@nnorukamchudi' },
];
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col font-sans">
    <header class="bg-white border-b border-gray-200 shadow-sm">
      <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
        <a href="/" class="text-lg font-semibold">Chudi Nnorukam</a>
        <ul class="flex space-x-4 text-sm">
          <li><a href="/" class="hover:underline">Home</a></li>
          <li><a href="/services" class="hover:underline">Services</a></li>
          <li><a href="/playbooks" class="hover:underline">Playbooks</a></li>
          <li><a href="/portfolio" class="hover:underline">Portfolio</a></li>
          <li><a href="/tools" class="hover:underline">Tools</a></li>
          <li><a href="/gigs" class="hover:underline">Gigs</a></li>
          <li><a href="/about" class="hover:underline">About</a></li>
          <li><a href="/contact" class="hover:underline">Contact</a></li>
        </ul>
      </nav>
    </header>

    <main class="flex-1 max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-gray-100 border-t border-gray-200 mt-8">
      <div class="max-w-6xl mx-auto px-4 py-6 text-sm flex flex-col md:flex-row md:justify-between md:items-center">
        <div class="mb-4 md:mb-0">
          <p>&copy; {new Date().getFullYear()} Chudi Nnorukam</p>
          <p class="text-gray-600">All rights reserved.</p>
          <p><a href="/sitemap" class="hover:underline">Sitemap</a> &bull; <a href="/rss.xml" class="hover:underline">RSS</a></p>
        </div>
        <div class="flex space-x-4">
          {socials.map((social) => (
            <a href={social.href} class="hover:underline" target="_blank" rel="noopener noreferrer">
              {social.label}
            </a>
          ))}
        </div>
      </div>
    </footer>
  </body>
</html>